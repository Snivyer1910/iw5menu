		#undef CHOICE_VERTICAL_ALIGN
		#define CHOICE_VERTICAL_ALIGN 		2

#define DO_THE_PRESTIGE_EXEC \
		play "enter_prestige"; \
		execnow "prestigeReset"; \
		if ( getplayerdata( "prestige" ) == 10 ) \
		{ \
			setPlayerData( "challengeState" , "ch_prestige_10" , 2 ); \
			setPlayerData( "challengeProgress" , "ch_prestige_10" , 1 ); \
		} \
		else \
		{ \
			setPlayerData( "challengeState" , "ch_prestige" , "localVarInt" ( "ui_prestigeState" ) ); \
			setPlayerData( "challengeProgress" , "ch_prestige" , "localVarInt" ( "ui_prestigeProgress" ) ); \
		} \
		execnow "updategamerprofile"; \
		execnow "uploadStats"; \
		close "self";

		CHOICE_POPUP_BUTTON(0, "button_popup_0", "@MENU_PRESTIGE_ENTER", DO_THE_PRESTIGE_EXEC )
		CHOICE_POPUP_BUTTON(1, "button_popup_1", "@MENU_CANCEL", play "exit_prestige"; close "self"; )
	}
}