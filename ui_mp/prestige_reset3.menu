{
	menuDef
	{
		name "prestige_reset3"
		rect -130 -104 260 72 2 2
		popup
		forecolor 1 1 1 1
		focuscolor 1 1 1 1
		onOpen
		{
			setLocalVarBool "ui_centerPopup" ( 1 );
			play "tabs_slide";
			//lerp x "from" - "460" "to" 0 "over" "0.05";
			focusfirst;
			setLocalVarInt "ui_prestigeState" ( getplayerdata( "prestige" ) + 2 );
			setLocalVarInt "ui_prestigeProgress" ( getplayerdata( "prestige" ) + 1 );

		}
		onClose
		{
			setLocalVarBool "ui_centerPopup" ( 0 );
		}
		onEsc
		{
			play "exit_prestige";
			close "self";
		}
		itemDef
		{
			rect -1280 -480 2560 960 2 2
			decoration
			visible 1
			style 3
			forecolor 0 0 0 0.8
			background "white"
			textscale 0.55
		}
				// set text's width so it doesn't extend pass the frame
		#undef CHOICE_POPUP_TEXT_WIDTH
		#define CHOICE_POPUP_TEXT_WIDTH 296

		MENU_POPUP_FRAME( 45.5, 300, 130, "@MENU_PRESTIGE_RESET_TITLE3", "@MENU_PRESTIGE_RESET_WARNING3" )

